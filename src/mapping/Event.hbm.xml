<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
   <class
      name="hello.Message"
      table="EVENT">
      <id
         name="id"
         column="EVENT_ID">
         <generator class="increment"/>
      </id>
      <property
         name="event"
         column="EVENT_NAME"/>
   </class>
</hibernate-mapping>